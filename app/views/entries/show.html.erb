<h1><%= @place["name"] %></h1>

<h2>Entries</h2>

<% if @entries.any? %>
  <ul>
    <% @entries.each do |entry| %>
      <li>
        <strong><%= entry["title"] %></strong>: <%= entry["description"] %> (<%= entry["date"] %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No entries yet.</p>
<% end %>

<p>
  <a href="/places/<%= @place["id"] %>/entries/new">Add a New Entry</a>
</p>

<p><a href="/places">Back to Travel Log</a></p>